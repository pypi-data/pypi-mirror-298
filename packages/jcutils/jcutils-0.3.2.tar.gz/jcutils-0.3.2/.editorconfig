# 顶级配置，适用于所有文件
root = true

# 默认的编码格式
[*]
charset = utf-8

# 换行符（LF是Unix风格，CRLF是Windows风格）
[*]
end_of_line = lf

# 缩进样式（使用4个空格）
[*]
indent_style = space
indent_size = 4

# 删除行末尾的空格
[*]
trim_trailing_whitespace = true

# 插入一个空行到文件末尾
[*]
insert_final_newline = true

# 针对Python源代码的配置
[*.py]
# 使用4个空格进行缩进
indent_size = 4

# 针对特定目录或文件的配置
[tests/**]
# 测试目录下的所有文件都使用Unix风格的换行符
end_of_line = lf
