#:kivy 2.1.0

<Param>
    label: ""
    value: ""
    key: ""
    placeholder: ""
    input_filter: None
    text_input: text_input
    BoxLayout:
        size: root.size
        pos: root.pos
        spacing: app.theme.spacing
        orientation: 'vertical'
        LeftTextLabel:
            text: root.label
            italic: True
        TextInput:
            id: text_input
            input_filter: root.input_filter
            text: root.value
            multiline: False
            hint_text: root.placeholder