<odoo>
<record id="general_audit_ws_c165170_internal_user_rule" model="ir.rule">
    <field name="name">Financial Level ROMM (c165170) - Internal Users</field>
    <field name="model_id" ref="model_general_audit_ws_c165170" />
    <field name="groups" eval="[(4, ref('base.group_user'))]" />
    <field name="domain_force">[
      ('user_id','=',user.id),
    ]</field>
    <field name="perm_unlink" eval="1" />
    <field name="perm_write" eval="1" />
    <field name="perm_read" eval="1" />
    <field name="perm_create" eval="1" />
</record>

<record id="general_audit_ws_c165170_company_rule" model="ir.rule">
    <field
            name="name"
        >Financial Level ROMM (c165170) - Responsible to company data</field>
    <field name="model_id" ref="model_general_audit_ws_c165170" />
    <field name="groups" eval="[(4, ref('general_audit_ws_c165170_company_group'))]" />
    <field name="domain_force">[('company_id','=',user.company_id.id)]</field>
    <field name="perm_unlink" eval="1" />
    <field name="perm_write" eval="1" />
    <field name="perm_read" eval="1" />
    <field name="perm_create" eval="1" />
</record>

<record id="general_audit_ws_c165170_companies_rule" model="ir.rule">
    <field
            name="name"
        >Financial Level ROMM (c165170) - Responsible to company and all child companies data</field>
    <field name="model_id" ref="model_general_audit_ws_c165170" />
    <field
            name="groups"
            eval="[(4, ref('general_audit_ws_c165170_company_child_group'))]"
        />
    <field name="domain_force">[('company_id','in',user.company_ids.ids)]</field>
    <field name="perm_unlink" eval="1" />
    <field name="perm_write" eval="1" />
    <field name="perm_read" eval="1" />
    <field name="perm_create" eval="1" />
</record>

<record id="general_audit_ws_c165170_all_rule" model="ir.rule">
    <field name="name">Financial Level ROMM (c165170) - All</field>
    <field name="model_id" ref="model_general_audit_ws_c165170" />
    <field name="groups" eval="[(4, ref('general_audit_ws_c165170_all_group'))]" />
    <field name="domain_force">[(1,'=',1)]</field>
    <field name="perm_unlink" eval="1" />
    <field name="perm_write" eval="1" />
    <field name="perm_read" eval="1" />
    <field name="perm_create" eval="1" />
</record>
</odoo>
