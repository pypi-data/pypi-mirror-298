  "version": "2.0.0",
  "tasks": [
    {
      "label": "干跑测试",
      "type": "shell",
      "command": "robot -A Args/dryrun.args Tests"
    },
    {
        "label": "运行所有测试",
        "type": "shell",
        "command": "robot -A Args/run.args Tests"
      },
    {
      "label": "打开调试报告",
      "type": "shell",
      "command": "start report.html",
      "presentation": {
        "echo": true,
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false,
      },
    },
    {
        "label": "打开报告",
        "type": "shell",
        "command": "start Logs/report.html",
        "presentation": {
          "echo": true,
          "reveal": "never",
          "focus": false,
          "panel": "shared",
          "showReuseMessage": false,
          "clear": false,
        },
      },
    {
        "label": "更新界面模型",
        "type": "shell",
        "command": "ra vmg"
    }
  ]
}
